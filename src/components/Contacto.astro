---
import NameSection from "./NameSection.astro";
import TitleSection from "./TitleSection.astro";
---

<section class="mx-5 mt-15 flex flex-col items-center" id="contacto">
  <NameSection name="Contacto" />

  <TitleSection title="Comencemos un nuevo camino juntos" />

  <form action="#" method="get" class="w-full grid mt-7.5 gap-5">
    <div class="space-y-5 reveal-fade-up">
      <label for="name" class="block">Nombres y apellidos</label>
      <input
        type="text"
        name="name"
        id="name"
        placeholder="Guillermo mendoza"
        class="w-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
      />
    </div>

    <div class="space-y-5 reveal-fade-up">
      <label for="email" class="block">Correo electrónico</label>
      <input
        type="email"
        name="email"
        id="email"
        placeholder="guillermo@gmail.com"
        class="w-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
      />
    </div>

    <div class="space-y-5 reveal-fade-up">
      <label for="phone" class="block">Teléfono</label>
      <input
        type="tel"
        name="phone"
        id="phone"
        placeholder="+51999888777"
        class="w-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
      />
    </div>

    <div class="space-y-5 reveal-fade-up">
      <label for="message" class="block">Mensaje</label>
      <textarea
        name="message"
        id="message"
        rows="4"
        placeholder="Deseo obtener mayor información sobre la plataforma codium y agendar una cita para una demostración."
        class="w-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
      ></textarea>
    </div>

    <button
      type="submit"
      class="block font-regular text-center text-white bg-orange-500 rounded-xl px-5 py-3 reveal-fade-up"
      >Solicitar</button
    >
  </form>
</section>
