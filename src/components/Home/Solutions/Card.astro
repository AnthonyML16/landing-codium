---
const { title, description, reveal } = Astro.props;

let left = reveal == "left" ? true : false;
let right = reveal == "right" ? true : false;
let up = reveal == "up" ? true : false;
let down = reveal == "down" ? true : false;

up = (!left && !right && !down) ?? true;
---

<div
  class:list={[
    `relative space-y-4 p-10 border-t-1 border-gray-950/25 w-full md:border-x-1 2xl:text-2xl`,
    { ["reveal-fade-left"]: left == true },
    { ["reveal-fade-right"]: right == true },
    { ["reveal-fade-up"]: up == true },
    { ["reveal-fade-down"]: down == true }
  ]}
>
  <div
    class="w-5 h-5 bg-white border-1 border-gray-950/25 rounded-full absolute -top-2.5 -left-2.5 xl:-left-3"
  >
  </div>
  <div
    class="w-5 h-5 bg-white border-1 border-gray-950/25 rounded-full absolute -top-2.5 -right-2.5 xl:-right-2.5"
  >
  </div>

  <div class="w-10 text-teal-600">
    <slot />
  </div>

  <p class="text-xl font-semibold 2xl:text-3xl">{title}</p>
  <p>
    {description}
  </p>
</div>
