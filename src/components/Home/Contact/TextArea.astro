---
const { identifier, label, placeholder } = Astro.props;
---

<div class="size-full flex flex-col gap-5 reveal-fade-up">
  <label for={identifier} class="block">{label}</label>
  <div class="size-full">
    <textarea
      name={identifier}
      id={identifier}
      placeholder={placeholder}
      class="size-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
    ></textarea>
  </div>
</div>
