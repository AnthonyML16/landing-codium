---
const { identifier, label, rows, placeholder } = Astro.props;
---

<div class="space-y-5 reveal-fade-up">
  <label for={identifier} class="block">{label}</label>
  <textarea
    name={identifier}
    id={identifier}
    rows={rows}
    placeholder={placeholder}
    class="w-full px-5 py-4 rounded-xl bg-gray-950/3 border-1 border-gray-950/25 text-black"
  ></textarea>
</div>
