---
import NameSection from "./NameSection.astro";
import TitleSection from "./TitleSection.astro";
import checkWhite from "../assets/icons/check_white.png";
import checkBlack from "../assets/icons/check_black.png";
import ListCheck from "./ListCheck.astro";
---

<section class="mx-5 mt-15 flex flex-col items-center" id="planes">
  <NameSection name="Planes" />

  <TitleSection title="Planes de precios simples" />

  <div class="w-full grid mt-7.5 gap-5">
    <div
      class="w-full p-10 space-y-5 bg-gray-950/3 border-1 border-gray-950/25 rounded-xl reveal-fade-up"
    >
      <h5 class="text-lg font-medium">Plan Básico</h5>
      <hr class="border-gray-950/25" />
      <p>Desde</p>
      <p class="font-medium text-3xl">
        S/. 75<span class="text-base text-gray-300">/mes</span>
      </p>
      <a
        href="#contacto"
        class="block font-regular text-center text-white bg-orange-500 rounded-xl px-5 py-2"
      >
        Solicitar
      </a>
      <hr class="border-gray-950/25" />
      <ul class="space-y-2">
        <ListCheck text="Estudiantes ilimitados" color="black" />
        <ListCheck text="Docentes ilimitados" color="black" />
        <ListCheck text="Personal ilimitados" color="black" />
        <ListCheck text="Roles de personal ilimitados" color="black" />
        <ListCheck text="Cursos ilimitados" color="black" />
        <ListCheck text="Generación de certificados" color="black" />
      </ul>
    </div>
    
    <div
      class="w-full p-10 space-y-5 bg-orange-500 border-1 border-gray-950/25 rounded-xl reveal-fade-up"
    >
      <h5 class="text-lg font-medium text-white">Plan Premium</h5>
      <hr class="border-white" />
      <p class="text-white">Desde</p>
      <p class="font-medium text-3xl text-white">
        S/. 100<span class="text-base text-gray-300">/mes</span>
      </p>
      <a
        href="#contacto"
        class="block font-regular text-center text-orange-500 bg-white rounded-xl px-5 py-2"
      >
        Solicitar
      </a>
      <hr class="border-white" />
      <ul class="space-y-2">
        <ListCheck text="Estudiantes ilimitados" color="white" />
        <ListCheck text="Docentes ilimitados" color="white" />
        <ListCheck text="Personal ilimitados" color="white" />
        <ListCheck text="Roles de personal ilimitados" color="white" />
        <ListCheck text="Cursos ilimitados" color="white" />
        <ListCheck text="Generación de certificados" color="white" />
        <ListCheck text="Almacenamiento incluido" color="white" />
      </ul>
    </div>
  </div>
</section>
