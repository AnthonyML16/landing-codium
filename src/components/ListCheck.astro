---
const { text, color } = Astro.props;

const color_text = color === "white" ? "text-white" : "text-black";
---

<li class=`${color_text} space-x-2.5 flex items-center`>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="lucide lucide-check"><path d="M20 6 9 17l-5-5"></path></svg
  >
  <p>{text}</p>
</li>
