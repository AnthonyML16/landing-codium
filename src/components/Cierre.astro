---
import fondo from "../assets/fondo.webp";
import imagotipo from "../assets/imagotipo.webp";
import ListArrow from "./ListArrow.astro";
---

<section
  class="relative mx-3 mt-15 mb-3 overflow-hidden rounded-2xl reveal-fade-up"
>
  <section class="h-full w-full overflow-hidden rounded-2xl">
    <img
      src={fondo.src}
      alt="Fondo de puntos"
      class="absolute top-0 left-0 w-full h-full -z-2 object-cover opacity-50"
    />
  </section>

  <section
    class="grid justify-center px-10 py-7.5 gap-10 border-1 border-gray-950/25 rounded-2xl"
  >
    <div class="space-y-5 flex flex-col items-center text-center">
      <img
        src={imagotipo.src}
        alt="Imagotipo de Codium Platform"
        class="w-25 h-auto"
      />
      <p class="text-2xl font-semibold text-gray-950">
        Nueva forma de enseñanza flexible y accesible
      </p>
    </div>

    <div>
      <ul class="space-y-2.5 flex flex-col items-center text-center">
        <ListArrow text="Características" enlace="#caracteristicas" />
        <ListArrow text="Soluciones" enlace="#soluciones" />
        <ListArrow text="Beneficios" enlace="#beneficios" />
        <ListArrow text="Planes" enlace="#planes" />
        <ListArrow text="Contacto" enlace="#contacto" />
        <ListArrow text="Certificados" enlace="#" />
      </ul>
    </div>

    <hr class="border-gray-950/25" />

    <div class="flex flex-col gap-5 items-center">
      <p>
        &copy; <span class="copyright-year"></span>. Todos los derechos
        reservados.
      </p>
      <div class="flex flex-col items-center gap-2.5">
        <a href="#">Políticas de privacidad</a>
        <a href="#">Términos de uso</a>
      </div>
    </div>
  </section>
</section>

<script>
  const camp_data = document.querySelector(".copyright-year");
  const year = new Date().getFullYear();

  if (camp_data && year) {
    camp_data.innerHTML = year.toString();
  }
</script>
