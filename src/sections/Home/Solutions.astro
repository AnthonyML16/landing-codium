---
import NameSection from "../../components/UI/NameSection.astro";
import TitleSection from "../../components/UI/TitleSection.astro";
import Card from "../../components/Home/Solutions/Card.astro";
import ImagePlatform from "../../components/Home/Solutions/ImagePlatform.astro";
---

<section class="relative mx-5 mt-15 flex flex-col items-center" id="soluciones">
  <NameSection name="Soluciones" />
  <TitleSection title="Distintos formas de usar una misma plataforma" />

  <div class="w-full mt-7.5 grid gap-5 border-x-1 border-gray-950/25 md:grid-cols-2 md:gap-x-0 lg:grid-cols-3 lg:gap-0">
    <Card
      title="Centros de formación"
      description="Centros de educación y academias que buscan digitalizar su enseñanza y expandir su alcance."
      reveal="right"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100%"
        height="100%"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-university"
        ><circle cx="12" cy="10" r="1"></circle><path
          d="M22 20V8h-4l-6-4-6 4H2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2"
        ></path><path d="M6 17v.01"></path><path d="M6 13v.01"></path><path
          d="M18 17v.01"></path><path d="M18 13v.01"></path><path
          d="M14 22v-5a2 2 0 0 0-2-2a2 2 0 0 0-2 2v5"></path></svg
      >
    </Card>

    <Card
      title="Capacitación Empresarial"
      description="Formación interna con certificaciones digitales y seguimiento de desempeño."
      reveal="down"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="100%"
        height="100%"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-building-2"
        ><path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"></path><path
          d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"></path><path
          d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"></path><path d="M10 6h4"
        ></path><path d="M10 10h4"></path><path d="M10 14h4"></path><path
          d="M10 18h4"></path></svg
      >
    </Card>

    <div class="md:col-span-2 lg:col-span-1">
      <Card
        title="Cursos independientes"
        description="Profesionales que desean ofrecer sus propios cursos en línea con facilidad de administración."
        reveal="left"
        spanMd="col-span-full"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="100%"
          height="100%"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-house"
          ><path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"></path><path
            d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
          ></path></svg
        >
      </Card>
    </div>

    <ImagePlatform />
  </div>

  <div
    class="absolute bottom-0 left-0 h-1/5 size-full bg-linear-to-b from-white/0 to-white"
  >
  </div>
</section>
