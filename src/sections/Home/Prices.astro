---
import NameSection from "../../components/UI/NameSection.astro";
import TitleSection from "../../components/UI/TitleSection.astro";
import CardSecond from "../../components/Home/Prices/CardSecond.astro";
import CardMain from "../../components/Home/Prices/CardMain.astro";
import ListCheck from "../../components/Home/Prices/ListCheck.astro";
---

<section class="p-5 mt-15 flex flex-col items-center overflow-clip max-w-405 2xl:mx-auto" id="planes">
  <NameSection name="Planes" />
  <TitleSection title="Planes de precios simples" />

  <div class="w-full grid mt-7.5 gap-5 md:grid-cols-2 md:flex md:items-center md:justify-center">
    <CardSecond title="Plan Básico" price="75" reveal="right">
      <ListCheck text="Estudiantes ilimitados"/>
      <ListCheck text="Docentes ilimitados"/>
      <ListCheck text="Personal ilimitados"/>
      <ListCheck text="Roles de personal ilimitados"/>
      <ListCheck text="Cursos ilimitados"/>
      <ListCheck text="Generación de certificados"/>
    </CardSecond>

    <CardMain title="Plan Premium" price="100" reveal="left">
      <ListCheck text="Estudiantes ilimitados"/>
      <ListCheck text="Docentes ilimitados"/>
      <ListCheck text="Personal ilimitados"/>
      <ListCheck text="Roles de personal ilimitados"/>
      <ListCheck text="Cursos ilimitados"/>
      <ListCheck text="Generación de certificados"/>
      <ListCheck text="Almacenamiento incluido"/>
    </CardMain>
  </div>
</section>
